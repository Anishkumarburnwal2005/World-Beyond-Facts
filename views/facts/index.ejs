
<% layout("/layout/boilerPlate.ejs")%>

<body>
    <h3>All facts</h3>
    
    <!-- <form method="GET" action="/facts/new">
        <button>Generate a new fact</button>
    </form> -->


    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <%for(let fact of allFacts){%>
            <a href="/facts/<%= fact._id%>" class="fact_link">
                <div class="card col">
                    <img src="<%= fact.related_img%>" class="card-img-top" alt="fact_img" style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                    <p class="card-text">
                        <b><%=fact.category%></b><br>
                        <%=fact.fact%>
                    </p>
                    </div>
                </div>
            </a>
        <%}%>
    </div>
</body>
