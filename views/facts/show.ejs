
<% layout("/layout/boilerPlate.ejs")%>


<body>
    <h3>Fact details: </h3>
    <br>
    <ul>
        <li><b>Fact: </b><%= fact.fact%></li>
        <li><b>Category: </b><%= fact.category%></li>
        <li><b>Source: </b><%= fact.source %></li>
        <li><b>Discovered data: </b><%= fact.data_discovered%></li>
        <li><b>Verified: </b><%= fact.is_verified%></li>
        <li><b>Discover by: </b><%= fact.added_by%></li>
        <li><b>Discover at: </b><%= fact.created_at ? fact.created_at.toString().split(" ").slice(0, 4).join("-") : "No Record Found"%></li>
        <li><b>Updated at: </b><%=fact.updated_at ? fact.updated_at.toString().split(" ").slice(0, 4).join("-") : "Further Modification Not Done Yet"%></li>
    </ul>
    <br>
    <form method="GET" action="/facts/edit/<%=fact._id%>">
        <button>Edit</button>
    </form>
    <form method="POST" action="/facts/delete/<%=fact._id%>?_method=Delete">
        <button>Delete</button>
    </form>
</body>