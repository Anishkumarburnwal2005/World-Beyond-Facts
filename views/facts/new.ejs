
<% layout("/layout/boilerPlate.ejs")%>

<body>
    <div class="row">
        <div class="col-7 offset-2">

            <h2 class="mt-3">Discover the awesome fact: </h2>
            
            <form method="POST" action="/facts" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="fact" class="form-label">Fact: </label>
                    <input type="text" id="fact" placeholder="short description about your facts" name="factValidation[fact]"  class="form-control" required>
                    <div class="valid-feedback">This facts is unique.</div>
                    <div class="invalid-feedback">Enter the short description of the fact.</div>
                </div>

                <div class="row">
                <div class="mb-3 col-md-5">
                    <label for="category" class="form-label">Category: </label>
                    <input type="text" placeholder="define your category" name="factValidation[category]" id="category" class="form-control" required>
                    <div class="valid-feedback">Interesting field.</div>
                    <div class="invalid-feedback">Category should be valid</div>
                </div>
            
                <div class="mb-3 col-md-6">
                    <label for="source" class="form-label">Source: </label>
                    <input type="text" placeholder="source of your fact" name="factValidation[source]" id="source" class="form-control" required>
                    <div class="valid-feedback">Surprising source.</div>
                    <div class="invalid-feedback">Source should be mentioned.</div>
                </div>
                </div>
            
                <div class="mb-3">
                    <label for="data" class="form-label">Discovered data: </label>
                    <textarea placeholder="describe your awesome fact" name="factValidation[data_discovered]" rows="3" cols="30" id="data" class="form-control" required></textarea>
                    <div class="invalid-feedback">Description should be in detail</div>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Upload the image: </label>
                    <input type="file" id="image" name="factValidation[related_img]" class="form-control" required>
                    <div class="invalid-feedback">Image should be valid!</div>
                </div>

                <div class="mb-3">
                    <label for="addedBy" class="form-label">Name of Knowledge Hunter: </label>
                    <input type="text" id="addedBy" placeholder="enter the name of researcher" name="factValidation[added_by]" class="form-control">
                    <!-- <div class="valid-feedback">Nice name</div>
                    <div class="invalid-feedback">Name should be valid</div> -->
                </div>
            
                <div class="row">
                    <div class="mb-3 col-md-5">
                        <label for="verified" class="form-label">Verified status: </label>
                        <input type="text" id="verified" name="factValidation[is_verified]" placeholder="Is it verified or not" class="form-control" required>
                        <div class="valid-feedback">Thanks for verification</div>
                        <div class="invalid-feedback">Mention the status.</div>
                    </div>
                
                    <div class="mb-3 col-md-5">
                        <label for="create" class="form-label">Date of discovery: </label>
                        <input type="date" id="create" name="factValidation[created_at]" class="form-control">
                        <div class="invalid-feedback">Date should be valid</div>
                    </div>
                </div>
                
                <button class="btn btn-primary create_btn mt-3 mb-5">Create</button>
            </form>
        </div>
    </div>
</body>